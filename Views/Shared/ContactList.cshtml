@using AddressBook.Models.ContactData;
@model List<Contact>

<div class="contact-list">
  @if(Model.Count > 0)
  {
    <h2>Contacts:</h2>
    <div class="list-group">
      @for (int i = 0; i < Model.Count; i += 2)
      {
        <div class="row">
          <div class="contact col-md-6">
            <a href="/contacts/@Model[i].GetId()" class="list-group-item">
              @Model[i].GetName().GetFull()
            </a>
          </div>
          @if (i + 1 < Model.Count)
          {
            <div class="contact col-md-6">
              <a href="/contacts/@Model[i + 1].GetId()" class="list-group-item">
              @Model[i + 1].GetName().GetFull()
              </a>
            </div>
          }
        </div>
      }
    </div>
  }
  else
  {
    <h2>Your contact list is empty...</h2>
  }
</div>
