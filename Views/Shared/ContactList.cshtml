@using AddressBook.Models;
@model List<Contact>

<div class="contact-list">
  @if(Model.Count > 0)
  {
    <h2>Contacts:</h2>
    <div class="list-group">
    @foreach (var contact in Model)
    {
      <a href="/contacts/@contact.GetId()" class="list-group-item">@contact.GetName()</a>
    }
    </div>
  }
  else
  {
    <h2>Your contact list is empty...</h2>
  }
</div>
