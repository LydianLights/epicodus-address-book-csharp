<script>
  $(document).ready(function() {
    var submitConfirmed = false;
    $("#new-contact-modal form").submit(function(event) {
      if (submitConfirmed === false) {
        event.preventDefault();
        submitConfirmed = true;
        $("#new-contact-modal").modal("hide");
      }
    });
    $("#new-contact-modal").on("hidden.bs.modal", function() {
      if (submitConfirmed === true) {
        $("#new-contact-modal form").submit();
      }
    });
  });
</script>

@{
  string firstNameId = "contact-first-name";
  string lastNameId = "contact-last-name";
}

<div id="new-contact-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title">Add a new contact</h3>
      </div>
      <div class="modal-body">
        <form action="/contacts/add" method="post">
          <div class="form-group">
            <label class="form-label" for="@firstNameId">First Name:</label>
            <input class="form-control" type="text" id="@firstNameId" name="@firstNameId" autofocus>
          </div>
          <div class="form-group">
            <label class="form-label" for="@lastNameId">Last Name:</label>
            <input class="form-control" type="text" id="@lastNameId" name="@lastNameId">
          </div>
          <button class="btn btn-info" type="submit" name="add-contact-button">Add!</button>
        </form>
      </div>
    </div>
  </div>
</div>
