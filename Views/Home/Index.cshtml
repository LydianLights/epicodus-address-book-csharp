@using AddressBook.Models;
@model Dictionary<string, object>

@{
  Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron">
    <h1>Address Book</h1>
  </div>
  @Html.Partial("Index/ContactList", Model["contacts"])

  @Html.Partial("Index/NewContactForm")
  @if (Model["focused-contact"] != null)
  {
    @Html.Partial("Index/ContactDetails", Model["focused-contact"])
  }
</div>
